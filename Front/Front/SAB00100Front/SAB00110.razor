@using SAB00100Common.DTOs
@inherits R_Page
@inject R_ILocalizer<SAB00100FrontResources.Resources_Dummy_Class> ILocalizer
@attribute [R_Page(Title = "Employeee List")]
<R_StackLayout>
    <R_Grid @ref="@GridRef" 
            DataSource="_viewModel.EmployeeList" 
            R_ServiceGetListRecord="R_ServiceGetListRecord"
            Pageable
            PageSize="5">
        <R_GridColumns>
            <R_GridNumericColumn FieldName=@nameof(SAB00100GridDTO.EmployeeID)
                                 HeaderText="@ILocalizer["_EmployeeId"]">
            </R_GridNumericColumn>

            <R_GridNumericColumn FieldName=@nameof(SAB00100GridDTO.FirstName)
                                 HeaderText="@ILocalizer["_FirstName"]">
            </R_GridNumericColumn>

            <R_GridNumericColumn FieldName=@nameof(SAB00100GridDTO.LastName)
                                 HeaderText="@ILocalizer["_LastName"]">
            </R_GridNumericColumn>
        </R_GridColumns>
    </R_Grid>
    
    <R_ItemLayout xs="2">
        <R_Button OnClick="Button_OnClickAsync">
            @ILocalizer["_SelectData"]
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>
